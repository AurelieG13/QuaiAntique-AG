{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<div class="container">
{% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
<h1>Liste des contacts reçus</h1>

</div>

        {% for contact in contacts %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Message de : {{contact.firstname}} {{contact.name}} </h5>
                    <h6 class="card-subtitle mb-2 text-muted">Sujet : {{contact.subject}} </h6>
                    <p class="card-text">Message : {{ contact.message }}</p>
                    <p class="card-text">Envoyé le : {{ contact.createdAt|date('d/m/Y') }}</p>
                    {# <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a> #}
                </div>
            </div>
        {% endfor %}

{% endblock %}

