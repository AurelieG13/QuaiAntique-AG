{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table table-bordered">
        <tbody>
        {% for category in categories %}
            <tr class="text-center">
                <td>{{category.name}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
