{% extends 'base.html.twig' %}

{% block title %}Administration - Réservations{% endblock %}

{% block body %}

    <div class="mb-4">
        <a type="button" class="btn btn-custom" href="{{ path('admin_home') }}"><img src="{{ asset('assets/images/arrow-left-circle.svg') }}" alt=""> panneau d'administration</a>
    </div>

    <h1>Liste des réservations</h1>
    <div class="mb-4 mt-4">
        <a href="{{ path('manager_booking_add') }}" type="button" class="btn btn-custom">
            Ajouter une réservation 
        </a>
    </div>
            

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <td>Date de réservation</td>
            <td>Heure de réservation</td>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Email</td>
            <td>Téléphone</td>
            <td>Nb convives</td>
            <td colspan="2">Actions</td>
        </tr>
    </thead>
    <tbody>
    {% for booking in bookings %}
        <tr class="text-center">
            <td>{{ booking.dateBooking|date('d/m/y') }}</td>
            <td>{{ booking.timeBooking|date('H:i') }}</td>
            <td>{{ booking.firstname }}</td>
            <td>{{ booking.email }}</td>
            <td>{{ booking.phoneNumber }}</td>
            <td>{{ booking.seats }}</td>

            <td>
            <a href="{{ path('manager_booking_edit', {id: booking.id}) }}" type="button" class="btn btn-success">
                Modifier
            </a>
            </td>
            <td>
            <a href="{{ path('manager_booking_delete', {id: booking.id}) }}" type="button" class="btn btn-danger">
                Supprimer
            </a>
            </td>
        </tr>
    {% endfor %}
        
    </tbody>
</table>

{% endblock %}
