{% extends 'base.html.twig' %}

{% block title %}Administration - Menus{% endblock %}

{% block body %}
  <div class="mb-4">
    <a type="button" class="btn btn-custom" href="{{ path('admin_home') }}"><img src="{{ asset('assets/images/arrow-left-circle.svg') }}" alt=""> panneau d'administration</a>
  </div>

  <h1>Liste des menus</h1>
  <div class="mb-4 mt-4">
    <a href="{{ path('manager_menu_add') }}" type="button" class="btn btn-custom">
      Ajouter un menu
    </a>
    <a href="{{ path('manager_formule_list') }}" type="button" class="btn btn-custom">
      GÃ©rer les formules
    </a>
  </div>

  <table class="table table-bordered">
      <thead>
          <tr class="text-center">
              <td>Nom</td>
              <td>Description</td>
              <td>Image</td>
              <td colspan="2">Actions</td>
              <td colspan="3">Formules</td>
              
              
          </tr>
      </thead>
      <tbody>
      {% for menu in menus %}
          <tr class="text-center">
              <td>{{ menu.name }}</td>
              <td>{{ menu.description }}</td>
              <td>
              {% for image in menu.images %}
                <img src=" {{ asset('assets/uploads/menu/mini/30x30-' ~ image.name ) }} " alt="{{menu.name}}" width="30" class="mt-2">
              {% endfor %}
              </td>
              <td>
              <a href="{{ path('manager_menu_edit', {id: menu.id}) }}" type="button" class="btn btn-success">
                  Modifier
              </a>
              </td>
              <td>
              <a href="{{ path('manager_menu_delete', {id: menu.id}) }}" type="button" class="btn btn-danger">
                Supprimer
            </a>
              </td>
                {% for formule in menu.formules %}
                    <td>{{ formule.name }}</td>
                {% endfor %}
          </tr>
      {% endfor %}
          
      </tbody>
  </table>

{% endblock %}
